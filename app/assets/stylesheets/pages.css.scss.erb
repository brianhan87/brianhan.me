body {
  margin: 0px;
  margin-top: -16px;
  font-family: "HelveticaNeue", Sans-Serif;
  font-weight: bold;
}

hr {
  border: 0px;
  height: 1px;
  background-color: black;
}

h1 {
  opacity: 1;
  // font-size: 70px;
  font-size: 4.375em;
  // background-color: white;
  // margin-bottom: 0;
  margin: 0;
  padding: 0;
}

h2 {
  // background-color: blue;
  // margin-top: 0;
  margin: 0; 
  padding: 0;
  font-weight: normal;
  font-style: italic;
  font-family: "TimesNewRoman", Serif;
  font-size: 20px;
}

/* Big Screens - Desktops and laptops ----------- */
@media only screen 
and (min-width : 1640px) {
/* Styles */
  .container {
    float: left;
  }
  #home {
    background-image: url(<%= asset_path 'cali_beach_light_1920.jpg' %>);
    background-size: 100%, 100%;
    width: 100%;
    height: 59.5em;
    box-shadow: inset 0px -15px 50px #777777;
    .home {
      background-color: white;
      margin-top: 19.625em;
      // margin-left: 24.265em;
      margin-left: 28.33%;
      // border: 6px solid white;
      // width: 31.25em;
      width: 33.33%;
      text-align: center;
      color: black;
      // padding: 4.375em;
      padding: 5%;
      opacity: 0.85;
    }
  }
  #hello {
    // background-color: #ccc;
    float: left;
    // width: 1440px;
    width: 100%;
    box-shadow: 0px 2px 20px #777777;

    div#hello-koala {
      float: left;
      background-image: url(<%= asset_path 'hello_koala_1000_dark.jpg' %>);
      background-size: 125%;
      width: 50%;
      height: 31.25em;
      font-family: "Futura", "HelveticaNeue", Sans-serif;
      font-style: italic;
      color: white;
      text-transform: uppercase;
      .koala.container {
        width: 100%;
        // background-color: hsla(275, 100%, 3%, 0.53);
        padding-top: 4em;
        padding-bottom: 4em;
        text-align: center;
        // background-color: #09000f;
        p {
          font-size: 1.1em;
        }
        .letter-spaced {
          color: yellow;
          letter-spacing: 0.25em;
          font-size: 5em;
          opacity: 0.85;
        }
      }
    }

    .about.container {
      background-color: blue;
      width: 50%;
      text-align: left;
    }

    img.hello-koala {

      float: left;
      margin-top: 160px;
      margin-left: 100px;
      width: 365px;
      height: 365px;
      // border-radius: 50%;
    }
  }
}

