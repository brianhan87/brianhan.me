/* Universal Styles ----------- */
body {
  margin: 0px;
  margin-top: -16px;
  font-family: "HelveticaNeue", Sans-Serif;
  font-weight: bold;
}

hr {
  border: 0px;
  height: 1px;
  background-color: black;
}

h1 {
  margin: 0;
  padding: 0;
  font-size: 7em;
  letter-spacing: 0.02em;
  font-style: bold;
  color: black;
  opacity: 0.9;
  font-family: 'Open Sans', sans-serif;
  text-transform: uppercase;

  &.brianhan {
    background-color: transparent;
    font-size: 4.375em;
    color: black;
    // font-family: "HelveticaNeue", Sans-serif;
    font-family: 'Open Sans', sans-serif;
    // font-family: "Futura", Sans-serif;
    font-style: normal;
    // font-style: italic;
    letter-spacing: 0;
    padding-top: 0;
  }
}

h2 {
  margin: 0; 
  padding: 0;
  font-weight: normal;
  font-style: italic;
  font-family: "TimesNewRoman", Serif;
  font-size: 20px;
}

p {
  font-size: 1em;
  font-weight: lighter;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  font-style: italic;
  color: black;
  font-family: "Futura", Sans-serif;
}

.container {
  float: left;
  -webkit-transition: 0.2s;
  -moz-transition: 0.2s;
  -ms-transition: 0.2s;
  -o-transition: 0.2s;
  transition: 0.2s;
}

#home {
  background-image: url(<%= asset_path 'cali_beach_light_1920.jpg' %>);
  background-size: 100%, 100%;
  width: 100%;
  height: 66em;
}

.home {
  float: left;
  background-color: white;
  margin-top: 19.625em;
  margin-left: 28.33%;
  width: 33.33%;
  text-align: center;
  color: black;
  padding: 5%;
  opacity: 0.9;
}

#hello {
  float: left;
  width: 100%;
  
  #hello-koala {
    float: left;
    width: 100%;
    
    .koala {
      width: 100%;
      height: 100%;
      float: left;
      text-align: left;
      opacity: 0.95;
      // background-color: black;
      .text {
        p.firstline{
          font-size: 2.8em;
        }
        small {
          font-family: "Futura", sans-serif;

        }
        p.secondline {
          font-size: 1.5em;
        }

        width: 100%;
        float: left;
        background-color: white;
        text-align: center;
        margin-top: 0.5em;

        .paragraph {
          width: 100%;
          padding-bottom: 2em;
        }

      }
      img {
        float: left;
        width: 33.33%;
        margin-left: 0;
        margin-right: 0;
      }
    }
  }
}

#skills {
  float: left;
  width: 100%;

  #my-skills {
    float: left;
    // background-image: url(<%= asset_path 'workstation_1200.jpg' %>);
    // background-size: 100%;
    background-color: white;
    width: 100%;
    margin-top: 5em;
    margin-bottom: 5em;

    .skills {
      
      float: left;
      width: 50%;
      text-align: center;
      height: 100%;
      margin-left: 25%;

      ul {
        float: left;
        padding-left: 0;
        li { 
          float: left;
          list-style-type: none;
          margin-right: 1.5em; 
          margin-top: 1.5em; 
          margin-bottom: 1.5em; 
        } 
      }

      b {
        padding: 0.5em;
        border-radius: 5px;
        opacity: 0.9;
        font-size: 1.5em;
        text-transform: uppercase;
        font-family: "Futura", Sans-serif;
      }
    }
    img {
      width: 40%;
      float: right; 
    }
  }
}

#contact {
  background-image: url(<%= asset_path 'cali_beach_light_1920.jpg' %>);
  background-size: 100%;
  width: 100%;
  height: 50em;
  float: left;
  .contact {
    width: 50%;
    margin-left: 25%;
    text-align: center;
    margin-top: 5em;
    margin-bottom: 5em;
    background-color: white;
    opacity: 0.8;
    h1, p {
      opacity: 1;
      color: black;
    }
  }
}

ul.links {
  width: 66%;
  margin-left: 33%;
  font-size: 1.2em;
  list-style-type: none;
  li a {
    &.top {
      background-color: lightgreen;
      margin-left: 10px;
      font-size: 1em;
      &:hover {
        background-color: turquoise;
        color: white;
        border-bottom: 5px solid white;
        opacity: 1;
        padding-bottom: 10px;
        margin-top: -1em;
      }
    }
    float: left;
    text-decoration: none;
    font-family: "Futura", sans-serif;
    background-color: yellow;
    color: black;
    border-bottom: 2px solid transparent;
    padding: 19px;
    -webkit-transition: 0.2s;
    -moz-transition: 0.2s;
    -ms-transition: 0.2s;
    -o-transition: 0.2s;
    transition: 0.2s;
    &:hover {
      // border-top-left-radius: 15px; 
      background-color: #cac52f;
      border-bottom: 5px solid red;
      -webkit-transition: 0.2s;
      -moz-transition: 0.2s;
      -ms-transition: 0.2s;
      -o-transition: 0.2s;
      transition: 0.2s;
    }
    
  }
}
.htmlcss {
  background-color: hsla(35, 100%, 67%, 0.3);
  background-color: #ffb957;
}
.photoshop {
  background-color: hsla(214, 79%, 64%, 0.82);
  background-color: #5b9aec;
}
.js {
  background-color: hsla(58, 79%, 64%, 0.82);
  background-color: #ece75b;
}
.ror {
  background-color: hsla(359, 79%, 64%, 0.82);
  background-color: #ec5b5d;
}
.agile {
  background-color: hsla(140, 79%, 64%, 0.82);
  background-color: #5bec8b;
}
.git {
  background-color: turquoise;
}
.video {
  background-color: #ccc;
}

/* Small Desktop - 1280px to 1680px width ----------- */
@media only screen 
and (min-width: 80em)
and (max-width : 105em) {
  #home {
    height: 58em;
  }
  
  #hello-koala,
  #skills {
    height: 30em;
  }


  .koala p {
    font-size: 1.2em;
  }


}
