body {
  margin: 0px;
  margin-top: -16px;
  font-family: "HelveticaNeue", Sans-Serif;
  font-weight: bold;
}

hr {
  border: 0px;
  height: 1px;
  background-color: black;
}

h1 {
  opacity: 1;
  font-size: 4.375em;
  margin: 0;
  padding: 0;
}

h2 {
  margin: 0; 
  padding: 0;
  font-weight: normal;
  font-style: italic;
  font-family: "TimesNewRoman", Serif;
  font-size: 20px;
}

.htmlcss {
  background-color: hsla(35, 100%, 67%, 0.3);
  background-color: #ffb957;
}
.photoshop {
  background-color: hsla(214, 79%, 64%, 0.82);
  background-color: #5b9aec;
}
.js {
  background-color: hsla(58, 79%, 64%, 0.82);
  background-color: #ece75b;
}
.ror {
  background-color: hsla(359, 79%, 64%, 0.82);
  background-color: #ec5b5d;
}
.agile {
  background-color: hsla(140, 79%, 64%, 0.82);
  background-color: #5bec8b;
}
.git {
  background-color: turquoise;
}
.video {
  background-color: #ccc;
}

/* Big Screens - Desktops and laptops ----------- */
@media only screen 
and (min-width : 1640px) {
/* Styles */
  .container {
    float: left;
  }
  #home {
    background-image: url(<%= asset_path 'cali_beach_light_1920.jpg' %>);
    background-size: 100%, 100%;
    width: 100%;
    height: 59.5em;
    box-shadow: inset 0px -15px 50px #777777;
    .home {
      background-color: white;
      margin-top: 19.625em;
      margin-left: 28.33%;
      width: 33.33%;
      text-align: center;
      color: black;
      padding: 5%;
      opacity: 0.85;
    }
  }
  #hello {
    // background-color: #ccc;
    float: left;
    // width: 1440px;
    width: 100%;
    box-shadow: 0px 2px 20px #777777;

    div#hello-koala {
      float: left;
      background-image: url(<%= asset_path 'hello_koala_1000_dark.jpg' %>);
      background-size: 125%;
      width: 50%;
      height: 31.25em;
      font-family: "Futura", "HelveticaNeue", Sans-serif;
      font-style: italic;
      color: white;
      text-transform: uppercase;
      .koala.container {
        width: 100%;
        // background-color: hsla(275, 100%, 3%, 0.53);
        padding-top: 4em;
        padding-bottom: 4em;
        text-align: center;
        // background-color: #09000f;
        p {
          font-size: 1.1em;
        }
        h1.letter-spaced {
          color: yellow;
          letter-spacing: 0.25em;
          font-size: 5em;
          opacity: 0.85;
        }
      }
    }
    div#skills {
      float: left;
      width: 50%;
      height: 31.25em;
      background-image: url(<%= asset_path 'workstation_1200.jpg' %>);
      background-size: 100%;
      font-family: "Futura", Sans-serif;
      text-transform: uppercase;

      .skills.container {
        width: 100%;
        padding-top: 4em;
        padding-bottom: 4em;
        text-align: center;
        h1 {
          font-size: 5em;
          letter-spacing: 0.25em;
          font-style: italic;
          color: yellow;
          opacity: 0.9;

        }
        p {
          font-size: 1em;
          font-weight: normal;
        }
        small {
          font-weight: normal;
        }
        ul li{
          list-style-type: none;
          text-align: left;
          float: left;
          margin: 1em;
        } 
        em {
          padding: 0.5em;
          border-radius: 5px;
          opacity: 0.9;
          color: black;
          font-weight: normal;
        }
      }
    }
  }
}

