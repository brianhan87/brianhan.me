body {
  margin: 0px;
  margin-top: -16px;
  font-family: "HelveticaNeue", Sans-Serif;
  font-weight: bold;
}

hr {
  border: 0px;
  height: 1px;
  background-color: black;
}

/* Desktops and laptops ----------- */
@media only screen 
and (min-width : 1640px) {
/* Styles */
  #home {
    background-image: url(<%= asset_path 'cali_beach_light_1920.jpg' %>);
    background-size: 100%, 100%;
    width: 100%;
    height: 59.5em;
    box-shadow: inset 0px -15px 50px #777777;
    .home.container {
      background-color: white;
      float: left;
      margin-top: 19.625em;
      // margin-left: 24.265em;
      margin-left: 28.33%;
      // border: 6px solid white;
      // width: 31.25em;
      width: 33.33%;
      text-align: center;
      color: black;
      // padding: 4.375em;
      padding: 5%;
      opacity: 0.85;
    }
  }
}

