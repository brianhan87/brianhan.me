body {
  margin: 0px;
  margin-top: -16px;
  font-family: "HelveticaNeue", Sans-Serif;
  font-weight: bold;
}

#nav {
  float: left;
  // background-color: #ccc;
  width: 652px;
  margin-top: 50px;
  margin-bottom: -16px;
  margin-left: 394px;
  .navlink {
    width: 161px;
    float: left;
    // border: 1px solid white;
  }
  a {
    float: left;
    color: white;
    font-size: 20px;
    font-family: "TimesNewRoman", Serif;
    
    font-weight: normal;
    text-align: center;
    width: 100%;
    text-align: center;
    text-decoration: none;
    opacity: 0.8;
    text-shadow: 1px 1px 1px grey;
    border-bottom: 1px solid transparent;
    transition: 0.2s;
    &:hover {
      border: 1px solid white;
      margin-bottom: -1px;
      transition: 0.2s;
    }
  }
}

#home {
  background-image: url(<%= asset_path 'cali_beach_light_1440.jpg' %>);
  width: 1440px;
  height: 960px;
}

.container {
  // background-color: #ccc;
  float: left;
  margin-top: 50px;
  margin-left: 394px;
  border: 6px solid white;
  width: 500px;
  text-align: center;
  color: white;
  padding: 70px;
  h1 {
    font-size: 70px;
    // background-color: green;
    // margin-bottom: 0;
    margin: 0;
    padding: 0;
  }
  h2 {
    // background-color: blue;
    // margin-top: 0;
    margin: 0; 
    padding: 0;
    font-weight: normal;
    font-style: italic;
    font-family: "TimesNewRoman", Serif;
    font-size: 20px;

  }
}